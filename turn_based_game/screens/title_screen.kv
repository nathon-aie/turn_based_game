<TitleScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 30
        padding: [0, 100, 0, 100]
        Label:
            text: 'Title'
            font_size: 100
        Button:
            text: 'PLAY'
            font_size: 50
            size_hint: (None, None)
            size: (200, 100)
            pos_hint: {'center_x': 0.5}
            on_release: root.play_button()
        Button:
            text: 'QUIT'
            font_size: 50
            size_hint: (None, None)
            size: (200, 100)
            pos_hint: {'center_x': 0.5}
            on_release: app.quit_button()