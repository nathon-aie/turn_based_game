<Player@Image>:
    source: ("pics/character/mambo.jpg")
    size_hint: None, None
    size: 60, 60

<WorldScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 8
        Label:
            text: "Location: "
            font_size: 25
            size_hint_y: 0.1
            pos_hint: {'center_x': 0.5}
        ScrollView:
            size_hint_y: 0.7  # ย้ายขนาดความสูงมาไว้ที่ตัวคุม
            do_scroll_x: False # ปิดการเลื่อนด้วยนิ้ว (เพราะเราใช้ปุ่มเดิน)
            do_scroll_y: False
            RelativeLayout:
                id: map_area
                size_hint: (1, 1)
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1 
                    Rectangle:
                        pos: (0, 0)
                        size: (self.size)
                Player:
                    id: player_character
                    pos: (60, 60)
                    size: (60, 60)
        GridLayout:
            cols: 4
            size_hint_y: 0.2
            canvas.before: 
                Color: 
                    rgba: (0.8, 0.8, 0.8, 1)
                Rectangle: 
                    pos: (self.pos)
                    size: (self.size)
            Button:
                text: "Stats"
                font_size: 25
                on_release: root.status_button()
            Button:
                text: "Backpack"
                font_size: 25
                on_press: root.backpack_button()
            Button:
                text: "Save"
                font_size: 25
                on_release: root.save_game()
            Button:
                text: "Exit"
                font_size: 25
                on_release: root.exit_button()