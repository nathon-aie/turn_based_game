<StatusPopup>:
    title: 'Character Status'
    size_hint: (0.5, 0.8)
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    auto_dismiss: True
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 10
        Image:
            source: 'pics/character/mambo.jpg'
        Label:
            id: stats_label
            text: root.stats_text
            font_size: '22sp'
            halign: 'center'
            valign: 'middle'
            markup: True

        Button:
            text: 'Close'
            size_hint_y: None
            height: 50
            on_release: root.dismiss()