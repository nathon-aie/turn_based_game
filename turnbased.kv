<TitleScreen>:
    BoxLayout:
        orientation: 'vertical'
        spacing: 30
        padding: [0, 100, 0, 100]
        Label:
            text: 'Title'
            font_size: 100
        Button:
            text: 'PLAY'
            font_size: 50
            size_hint: (None, None)
            size: (200, 100)
            pos_hint: {'center_x': 0.5}
            on_release: root.play_button()
        Button:
            text: 'QUIT'
            font_size: 50
            size_hint: (None, None)
            size: (200, 100)
            pos_hint: {'center_x': 0.5}
            on_release: app.quit_button()

<WorldScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 8

<ItemButton@Button>:
    size_hint_y: None
    height: 50
    font_size: '20sp'

<BackpackPopup>:
    title: 'Backpack'
    size_hint: (0.9, 0.7)
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    auto_dismiss: True
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        ScrollView:
            do_scroll_x: False
            GridLayout:
                id: item_grid_layout
                cols: 1
                spacing: 5
                size_hint_y: None
                height: self.minimum_height
        Button:
            text: "Exit"
            size_hint_y: None
            height: 50
            on_release: root.dismiss()

<BattleScreen>:
    BoxLayout:  
        orientation: 'vertical'
        Label:
            id: result_label
            font_size: 25
            text: 'Fight'
            size_hint_y: 0.1
        Label:
            font_size: 50
            text: 'Sprite'
            color: (0, 0, 0, 1)
            size_hint_y: 0.5
            canvas.before: 
                Color: 
                    rgba: (0.5, 0.5, 0.5, 1)
                Rectangle:
                    pos: (self.pos)
                    size: (self.size)
        GridLayout:
            size_hint_y: 0.4
            cols: 3
            canvas.before: 
                Color: 
                    rgba: (0.8, 0.8, 0.8, 1)
                Rectangle: 
                    pos: (self.pos)
                    size: (self.size)
            Button:
                id: skill_1
                text: 'Skill 1'
                font_size: 30
            Button:
                id: skill_2
                text: 'Skill 2'
                font_size: 30
            Button:
                id: backpack
                text: 'Backpack'
                font_size: 30
                on_release: root.backpack_button()
            Button:
                id: skill_3
                text: 'Skill 3'
                font_size: 30
            Button:
                id: skill_4
                text: 'Skill 4'
                font_size: 30
            Button:
                id: run
                text: 'Run'
                font_size: 30
                on_release: root.run_button()