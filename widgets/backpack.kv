<BackpackPopup>:
    title: 'Backpack'
    size_hint: (0.9, 0.8)
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: 0.7
            ScrollView:
                size_hint_x: 0.6
                GridLayout:
                    id: item_grid_layout
                    cols: 1
                    size_hint_y: None
                    height: self.minimum_height
            Label:
                id: description_label
                text: "Select an item..."
                size_hint_x: 0.4
                text_size: self.size
                halign: 'center'
                valign: 'middle'
        BoxLayout:
            size_hint_y: 0.2
            spacing: 10
            padding: 5
            
            Button:
                text: "Use Item"
                on_release: root.confirm_use() # ปุ่มยืนยัน
            Button:
                text: "Cancel"
                on_release: root.dismiss()