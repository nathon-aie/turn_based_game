<ItemButton@Button>:
    size_hint_y: None
    height: 50
    font_size: '20sp'

<BackpackPopup>:
    title: 'Backpack'
    size_hint: (0.9, 0.7)
    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
    auto_dismiss: True
    BoxLayout:
        orientation: 'vertical'
        padding: 10
        ScrollView:
            do_scroll_x: False
            GridLayout:
                id: item_grid_layout
                cols: 1
                spacing: 5
                size_hint_y: None
                height: self.minimum_height
        Button:
            text: "Exit"
            size_hint_y: None
            height: 50
            on_release: root.dismiss()