<Player@Widget>:
    size_hint: None, None
    size: 75, 75
    canvas:
        Rectangle:
            pos: self.pos
            size: self.size

<WorldScreen>:
    BoxLayout:
        orientation: "vertical"
        padding: 10
        spacing: 8
        Label:
            text: "Location: "
            font_size: 25
            size_hint_y: 0.1
            pos_hint: {'center_x': 0.5}
        RelativeLayout:
            id: map_area
            size_hint_y: 0.7
            canvas.before:
                Color:
                    rgba: 0.3, 1, 0.3, 1 
                Rectangle:
                    pos: (0, 0)
                    size: (self.size)
            Widget:
                id: grass_area
                size_hint: None, None
                size: 225, 225
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                canvas:
                    Color:
                        rgba: 0, 0.5, 0, 0.8
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Player:
                id: player_character
                pos: (100, 100)
                canvas: 
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        source: ("pics/character/mambo.jpg")
            
        BoxLayout:
            id: stats_label
            size_hint_y: 0.2
            canvas.before: 
                Color: 
                    rgba: (0.8, 0.8, 0.8, 1)
                Rectangle: 
                    pos: (self.pos)
                    size: (self.size)
            Label:
                text: "STATS"
                pos_hint: {'center_x': 0.5}
                color: 0, 0, 0, 1
                font_size: 30