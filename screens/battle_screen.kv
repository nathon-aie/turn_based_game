<BattleScreen>:
    BoxLayout:  
        orientation: 'vertical'
        Label:
            id: result_label
            font_size: 25
            text: 'Fight'
            size_hint_y: 0.1
        Label:
            font_size: 50
            text: 'Sprite'
            color: (0, 0, 0, 1)
            size_hint_y: 0.5
            canvas.before: 
                Color: 
                    rgba: (0.5, 0.5, 0.5, 1)
                Rectangle:
                    pos: (self.pos)
                    size: (self.size)
        GridLayout:
            size_hint_y: 0.4
            cols: 3
            canvas.before: 
                Color: 
                    rgba: (0.8, 0.8, 0.8, 1)
                Rectangle: 
                    pos: (self.pos)
                    size: (self.size)
            Button:
                id: skill_1
                text: 'Skill 1'
                font_size: 30
            Button:
                id: skill_2
                text: 'Skill 2'
                font_size: 30
            Button:
                id: backpack
                text: 'Backpack'
                font_size: 30
                on_release: root.backpack_button()
            Button:
                id: skill_3
                text: 'Skill 3'
                font_size: 30
            Button:
                id: skill_4
                text: 'Skill 4'
                font_size: 30
            Button:
                id: run
                text: 'Run'
                font_size: 30
                on_release: root.run_button()