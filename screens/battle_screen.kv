<BattleScreen>:
    BoxLayout:  
        orientation: 'vertical'
        Label:
            id: result_label
            font_size: 25
            text: 'Fight'
            size_hint_y: 0.1
        RelativeLayout:
            id: battle_area
            size_hint_y: 0.6
            canvas.before: 
                Color: 
                    rgba: (0.5, 0.5, 0.5, 1)
                Rectangle:
                    pos: 0, 0
                    size: (self.size)
            Widget:
                id: hero_character
                size_hint: None, None
                size: 75, 75
                pos_hint: {'center_x': 0.3, 'center_y': 0.3}
                canvas: 
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:
                id: hero_stat_label
                text: ""
                font_size: 20
                color: (1, 1, 1, 1)
                size_hint: None, None
                size: 200, 50
                pos_hint: {'center_x': 0.1, 'center_y': 0.2}
            Widget:
                id: enemy_character
                size_hint: None, None
                size: 75, 75
                pos_hint: {'center_x': 0.7, 'center_y': 0.7}
                canvas: 
                    Color:
                        rgba: 1, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
            Label:
                id: enemy_stat_label
                text: ""
                font_size: 20
                color: (1, 1, 1, 1)
                size_hint: None, None
                size: 200, 50
                pos_hint: {'center_x': 0.9, 'center_y': 0.8}
        GridLayout:
            size_hint_y: 0.3
            cols: 3
            canvas.before: 
                Color: 
                    rgba: (0.8, 0.8, 0.8, 1)
                Rectangle: 
                    pos: (self.pos)
                    size: (self.size)
            Button:
                id: skill_1
                text: 'Skill 1'
                font_size: 30
            Button:
                id: skill_2
                text: 'Skill 2'
                font_size: 30
            Button:
                id: backpack
                text: 'Backpack'
                font_size: 30
                on_release: root.backpack_button()
            Button:
                id: skill_3
                text: 'Skill 3'
                font_size: 30
            Button:
                id: skill_4
                text: 'Skill 4'
                font_size: 30
            Button:
                id: run
                text: 'Run'
                font_size: 30
                on_release: root.run_button()